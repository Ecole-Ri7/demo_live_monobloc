{% block main %}
    <form action="/books/add" method="POST">
        <input type="text" name="title" placeholder="Titre">
        <input type="text" name="author" placeholder="Auteur">
        <button>Cr√©er</button>
    </form>
    {% if error %}
        <p>{{ error }}</p>
    {% endif %}
    {% for book in books %}
        <h2>{{book.title}}</h2>
        <p>{{book.author}}</p>
        <form action="/books/{{book.id}}/delete" method="POST">
            <button>Supprimer</button>
        </form>
    {% endfor %}
{% endblock %} 